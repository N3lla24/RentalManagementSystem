@model RentalManagement.Models.Inventory

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Inventory</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Item Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Inventory_ItemName)
        </dd>
        <dt class = "col-sm-2">
            Item Quantity
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Inventory_ItemQuantity)
        </dd>
        <dt class = "col-sm-2">
            Quantity Unit
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Inventory_ItemUnit)
        </dd>
        <dt class = "col-sm-2">
            Date Created
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Inventory_CreatedAt)
        </dd>
        <dt class = "col-sm-2">
