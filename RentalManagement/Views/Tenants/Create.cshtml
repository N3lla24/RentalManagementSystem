@model RentalManagement.Models.Tenant;

@{
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

    <title>Kerwin's Apartment</title>
    <link rel="icon" type="image/x-icon" href="images/logo2.svg">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v6.5.0/css/all.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/home.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <script src="home.js"></script>
</head>
<body style="background-color: #FEEAD1">
    <section id="header">
        <div class="navbar">
            <a href="@Url.Action("Index", "Home")" class="nbItem" id="homeOpt"><i class="fa-solid fa-house"></i></a>
        </div>
    </section>

    <section id="detailsCont" style="margin-top: 30px;background-color: #422c10; border-radius: 10px; padding: 20px">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <fieldset style="margin-left:50px; width:85%">
                <div class="form-group">
                    <label asp-for="Tenant_Email" class="form-label mt-4">Email address</label>
                    <input asp-for="Tenant_Email" type="email" class="form-control" placeholder="Enter email (e.g. email@example.com)">
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                    <div>
                        <span asp-validation-for="Tenant_Email" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group">
                    <label asp-for="Tenant_PhoneNumber" class="form-label mt-4">Phone Number</label>
                    <input asp-for="Tenant_PhoneNumber" type="text" class="form-control" placeholder="(e.g. 09XXXXXXXXX)">
                    <div>
                        <span asp-validation-for="Tenant_PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Tenant_UserName" class="form-label mt-4">User Name</label>
                    <input asp-for="Tenant_UserName" type="text" class="form-control" placeholder="Enter email (e.g. email@example.com)">
                    <div>
                        <span asp-validation-for="Tenant_UserName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Tenant_Password" class="form-label mt-4">Password</label>
                    <input asp-for="Tenant_Password" type="password" class="form-control" placeholder="Password" autocomplete="off">
                    <small class="form-text text-muted">We'll never share your password with anyone else.</small>
                    <div>
                        <span asp-validation-for="Tenant_Password" class="text-danger"></span>
                    </div>
                </div>
                @if (ViewData["ExistingUser"] != null)
                {
                    <div class="alert alert-dismissible alert-danger">
                        <strong>Existing User!</strong> Please Login or contact us<a href="#" class="alert-link">here</a> if you have not yet registered.
                    </div>
                }
                @if (ViewData["UserNotFound"] != null)
                {
                    <div class="alert alert-dismissible alert-danger">
                        <strong>Account Not Found!</strong> Send an Application <a href="#" class="alert-link">here</a> first.
                    </div>
                }
                @if (ViewData["Successful"] != null)
                {
                    <script>alert("Succesfully Registered, Redirecting to Login");</script>
                }
                <div class="form-group">
                    <input type="submit" value="Register" class="btn btn-primary" />
                </div>
                <div style="margin-top:50px">
                    <a href="@Url.Action("Index", "Login")">Back to Login</a>
                </div>

            </fieldset>
        </form>
    </section>

    <section id="backTopCont">
        <a href="#">
            <div class="backTop">
                <p>Back to Top&nbsp;&nbsp;<i class="fa-solid fa-arrow-up"></i></p>
            </div>
        </a>
    </section>

    <footer>
        <div class="footer-columns">
            <div class="column" id="col">
                <img src="images/logo.svg" alt="">
                <h2>Kerwin's Apartment</h2>
            </div>
            <div class="colBorder"></div>
            <div class="column">
                <h4>About</h4>
                <p>About us</p>
                <p>Rental Information</p>
                <p>Rent Rates and Policies</p>
                <p>Terms and Condition</p>
                <p>Community Information</p>
            </div>
            <div class="colBorder"></div>
            <div class="column" id="col">
                <h4>Contact us</h4>
                <p>+63 9123456789</p>
                <p>kerwin.rental@kerwin.com.ph</p>
                <p>Paknaan, Mandaue City, Cebu 6014</p>
                <p>Kerwin's Apartment</p><br>
                <h4>Follow us</h4>
                <a href="https://www.facebook.com/">
                    <i class="fa-brands fa-facebook-f"></i>
                </a>
                <a href="https://www.twitter.com/">
                    <i class="fa-brands fa-twitter"></i>
                </a>
                <a href="https://www.instagram.com/">
                    <i class="fa-brands fa-instagram"></i>
                </a>
                <a href="https://www.pinterest.com/">
                    <i class="fa-brands fa-pinterest"></i>
                </a>
                <a href="https://www.youtube.com/">
                    <i class="fa-brands fa-youtube"></i>
                </a>
            </div>
        </div>


    </footer>

    <footer id="foot2">
        <div class="footCont">
            <div class="footCont2">
                <div class="column2">
                    <p>Web Application developed by <b>DPMS 2023</b></p>
                    <p>Delig • Pila • Monares • Salas</p>
                </div>
            </div>
        </div>
    </footer>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
</html>
