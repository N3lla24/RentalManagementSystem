@model RentalManagement.Models.Room

@{
    ViewData["Title"] = "Room Details";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">


    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v6.5.0/css/all.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/home.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
</head>
<body style="background-color: #FEEAD1">
    <section id="header">
        <div class="navbar">
            <a href="@Url.Action("Index", "Home")" class="nbItem" id="homeOpt"><i class="fa-solid fa-house"></i></a>
        </div>
    </section>
        <section id="detailsCont" style="margin-top: 30px;background-color: #422c10; border-radius: 10px; padding: 20px">
        <h1>Room Details</h1>
        <hr />
            <div>      
                <dl class="row">
                    <dt class = "col-sm-2">
                        Room Number
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Room_Num)
                    </dd>
                    <dt class = "col-sm-2">
                        Room Capacity
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Room_Capacity)
                    </dd>
                    <dt class = "col-sm-2">
                        Room Pricing
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Room_Price) Pesos
                    </dd>
                    <dt class = "col-sm-2">
                        Room Size
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Room_Size) sq. ft.
                    </dd>
                    <dt class = "col-sm-2">
                        Room Color
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Room_Color)
                    </dd>
                    <dt class = "col-sm-2">
                        Room Flooring
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Room_Flooring)
                    </dd>
                    <dt class = "col-sm-2">
                        Room Appliance
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Room_Appliance)
                    </dd>
                    <dt class = "col-sm-2">
                        Room Furnished
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Room_Furnish)
                    </dd>
                    <dt class = "col-sm-2">
                        Room WIFI
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Room_WiFi)
                    </dd>
                    <dt class = "col-sm-2">
                        Room Status
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Room_Status)
                    </dd>
                    <dt class = "col-sm-2">
                        Unit ID
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.UnitId)
                    </dd>
                </dl>
            </div>
        <hr />
        <a asp-action="Create" asp-route-id="@Model?.RoomId">Apply for Rent</a> |
            <a asp-action="RoomPicking">Back to Room List</a>
        </section>
</body>
</html>
