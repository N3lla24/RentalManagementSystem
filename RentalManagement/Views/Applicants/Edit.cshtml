@model RentalManagement.Models.Applicants

@{
    ViewData["Title"] = "Application Edit";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v6.5.0/css/all.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/home.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
</head>
<body style="background-color: #FEEAD1">
    <section id="header">
        <div class="navbar">
            <a href="@Url.Action("Index", "Home")" class="nbItem" id="homeOpt"><i class="fa-solid fa-house"></i></a>
        </div>
    </section>

    <section id="detailsCont" style="margin-top: 30px;background-color: #422c10; border-radius: 10px; padding: 20px">
        <h1>Edit</h1>
        <hr />
        @if (ViewData["RoomNotFound"] != null)
        {
            <div class="alert alert-dismissible alert-danger">
                <strong>Room Not Found!</strong> Room you're applying is not found. Find available rooms <a href="@Url.Action("RoomPicking", "Applicants")" class="alert-link">here.</a>
            </div>
        }
        @if (ViewData["OccupiedRoom"] != null)
        {
            <div class="alert alert-dismissible alert-danger">
                <strong>Room Occupied!</strong> Room you're applying is occupied. Find unoccupied rooms <a href="@Url.Action("RoomPicking", "Applicants")" class="alert-link">here.</a>
            </div>
        }
        @if (ViewData["SuccessfulEdit"] != null)
        {
            <div class="alert alert-dismissible alert-success">
                <strong>Successfully Edited!</strong> Please wait for confirmation of your application. <br /><a href="@Url.Action("Index", "Home")" class="alert-link">Go Back to Home Page</a>.
            </div>
        }
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ApplicationId" />
                    <fieldset style="margin-left:80px; width:250%">
                        <div class="form-group">
                            <label asp-for="Applicants_FirstName" class="control-label">First Name</label>
                            <input asp-for="Applicants_FirstName" class="form-control" />
                            <span asp-validation-for="Applicants_FirstName" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <label asp-for="Applicants_MiddleName" class="control-label">Middle Name</label>
                            <input asp-for="Applicants_MiddleName" class="form-control" />
                            <span asp-validation-for="Applicants_MiddleName" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <label asp-for="Applicants_LastName" class="control-label">Last Name</label>
                            <input asp-for="Applicants_LastName" class="form-control" />
                            <span asp-validation-for="Applicants_LastName" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <label asp-for="Applicants_Email" class="control-label">Email Address</label>
                            <input asp-for="Applicants_Email" class="form-control" />
                            <span asp-validation-for="Applicants_Email" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <label asp-for="Applicants_PhoneNumber" class="control-label">Phone Number</label>
                            <input asp-for="Applicants_PhoneNumber" class="form-control" />
                            <span asp-validation-for="Applicants_PhoneNumber" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <label asp-for="Applicants_Address" class="control-label">Home Address</label>
                            <input asp-for="Applicants_Address" class="form-control" />
                            <span asp-validation-for="Applicants_Address" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <label asp-for="Application_RoomNumber" class="control-label">Room Number</label>
                            <input asp-for="Application_RoomNumber" class="form-control" />
                            <span asp-validation-for="Application_RoomNumber" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <label asp-for="Application_UnitNumber" class="control-label">Unit Number</label>
                            <input asp-for="Application_UnitNumber" class="form-control" />
                            <span asp-validation-for="Application_UnitNumber" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group" hidden>
                            <label asp-for="Applicant_UpdatedAt" class="control-label"></label>
                            <input asp-for="Applicant_UpdatedAt" class="form-control" type="datetime" value="@DateTime.Now.ToString()" readonly />
                            <span asp-validation-for="Applicant_UpdatedAt" class="text-danger"></span>
                        </div>
                        <div class="form-group" hidden>
                            <label asp-for="Applicant_CreatedAt" class="control-label"></label>
                            <input asp-for="Applicant_CreatedAt" class="form-control" type="datetime" readonly/>
                            <span asp-validation-for="Applicant_CreatedAt" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group" hidden>
                            <label asp-for="Application_Status" class="control-label"></label>
                            <input asp-for="Application_Status" class="form-control" type="datetime" readonly />
                            <span asp-validation-for="Application_Status" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
        <br />
        <hr />
        <div>
            <a asp-action="Details" asp-route-id="@Model?.ApplicationId">Back to Details</a>
        </div>
    </section>

    <section id="backTopCont">
        <a href="#">
            <div class="backTop">
                <p>Back to Top&nbsp;&nbsp;<i class="fa-solid fa-arrow-up"></i></p>
            </div>
        </a>
    </section>

    <footer>
        <div class="footer-columns">
            <div class="column" id="col">
                <img src="images/logo.svg" alt="">
                <h2>Kerwin's Apartment</h2>
            </div>
            <div class="colBorder"></div>
            <div class="column">
                <h4>About</h4>
                <p>About us</p>
                <p>Rental Information</p>
                <p>Rent Rates and Policies</p>
                <p>Terms and Condition</p>
                <p>Community Information</p>
            </div>
            <div class="colBorder"></div>
            <div class="column" id="col">
                <h4>Contact us</h4>
                <p>+63 9123456789</p>
                <p>kerwin.rental@kerwin.com.ph</p>
                <p>Paknaan, Mandaue City, Cebu 6014</p>
                <p>Kerwin's Apartment</p><br>
                <h4>Follow us</h4>
                <a href="https://www.facebook.com/">
                    <i class="fa-brands fa-facebook-f"></i>
                </a>
                <a href="https://www.twitter.com/">
                    <i class="fa-brands fa-twitter"></i>
                </a>
                <a href="https://www.instagram.com/">
                    <i class="fa-brands fa-instagram"></i>
                </a>
                <a href="https://www.pinterest.com/">
                    <i class="fa-brands fa-pinterest"></i>
                </a>
                <a href="https://www.youtube.com/">
                    <i class="fa-brands fa-youtube"></i>
                </a>
            </div>
        </div>


    </footer>

    <footer id="foot2">
        <div class="footCont">
            <div class="footCont2">
                <div class="column2">
                    <p>Web Application developed by <b>DPMS 2023</b></p>
                    <p>Delig • Pila • Monares • Salas</p>
                </div>
            </div>
        </div>
    </footer>

</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
