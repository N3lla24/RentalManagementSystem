@model RentalManagement.Models.Room

@{
    ViewData["Title"] = "Room Details";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

    <title>Kerwin's Apartment</title>
    <link rel="icon" type="image/x-icon" href="images/logo2.svg">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v6.5.0/css/all.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/home.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
</head>
<body style="background-color: #FEEAD1">
    <section id="header">
        <div class="navbar">
            <a href="@Url.Action("Index", "Home")" class="nbItem" id="homeOpt"><i class="fa-solid fa-house"></i></a>
        </div>
    </section>
    <section id="detailsCont" style="margin-top: 30px;background-color: #422c10; border-radius: 10px; padding: 20px">
        <h1>Details</h1>
        <h4>Room</h4>
        <hr />
        <div style="padding-left: 30px">

            <dl class="row">
                <dt class="col-sm-3">
                    Room ID:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.RoomId) 
                </dd>
                <dt class="col-sm-3">
                    Room Number:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Room_Num)
                </dd>
                <dt class="col-sm-3">
                    Room Status
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Room_Status)
                </dd>
                <dt class="col-sm-3">
                    Room Capacity
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Room_Capacity)
                </dd>
                <dt class="col-sm-3">
                    Room Price
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Room_Price)
                </dd>
                <dt class="col-sm-3">
                    Entry At
                </dt>
                <dd class="col-sm-20">
                    @Html.DisplayFor(model => model.Room_CreatedAt)
                </dd>
                <dt class="col-sm-3">
                    Last Update At
                </dt>
                <dd class="col-sm-20">
                    @Html.DisplayFor(model => model.Room_UpdatedAt)
                </dd>
                <dt class="col-sm-3">
                    Room Color
                </dt>
                <dd class="col-sm-20">
                    @Html.DisplayFor(model => model.Room_Color)
                </dd>
                <dt class="col-sm-3">
                    Room Flooring
                </dt>
                <dd class="col-sm-20">
                    @Html.DisplayFor(model => model.Room_Flooring)
                </dd>
                <dt class="col-sm-3">
                    Appliances Availability
                </dt>
                <dd class="col-sm-20">
                    @Html.DisplayFor(model => model.Room_Appliance)
                </dd>
                <dt class="col-sm-3">
                    Room Furnished
                </dt>
                <dd class="col-sm-20">
                    @Html.DisplayFor(model => model.Room_Furnish)
                </dd>
                <dt class="col-sm-3">
                    WiFi Availability
                </dt>
                <dd class="col-sm-20">
                    @Html.DisplayFor(model => model.Room_WiFi)
                </dd>
                <dt class="col-sm-3">
                    Tenant ID Occupant
                </dt>
                <dd class="col-sm-20">
                    @Html.DisplayFor(model => model.TenantId)
                </dd>

               
            </dl>
        </div>
        <hr />
        <div>
            <a href="@Url.Action("ManageRental", "AdminHome")"><i class="fas fa-arrow-left" href="@Url.Action("ManageRental", "AdminHome")"></i> Back to Home</a>
            @* @if (Model.Requisition_Status == "Pending")
            {
                <a asp-action="AcceptRequest" asp-route-id="@Model?.RequisitionId" style="margin-left: 70%; color: lawngreen">Accept</a> <i>|</i>
                <a asp-action="RejectRequest" asp-route-id="@Model?.RequisitionId" style="color: red">Reject</a>
            } *@

        </div>
    </section>

    <section id="backTopCont">
        <a href="#">
            <div class="backTop">
                <p>Back to Top&nbsp;&nbsp;<i class="fa-solid fa-arrow-up"></i></p>
            </div>
        </a>
    </section>

    <footer>
        <div class="footer-columns">
            <div class="column" id="col">
                <img src="images/logo.svg" alt="">
                <h2>Kerwin's Apartment</h2>
            </div>
            <div class="colBorder"></div>
            <div class="column">
                <h4>About</h4>
                <p>About us</p>
                <p>Rental Information</p>
                <p>Rent Rates and Policies</p>
                <p>Terms and Condition</p>
                <p>Community Information</p>
            </div>
            <div class="colBorder"></div>
            <div class="column" id="col">
                <h4>Contact us</h4>
                <p>+63 9123456789</p>
                <p>kerwin.rental@kerwin.com.ph</p>
                <p>Paknaan, Mandaue City, Cebu 6014</p>
                <p>Kerwin's Apartment</p><br>
                <h4>Follow us</h4>
                <a href="https://www.facebook.com/">
                    <i class="fa-brands fa-facebook-f"></i>
                </a>
                <a href="https://www.twitter.com/">
                    <i class="fa-brands fa-twitter"></i>
                </a>
                <a href="https://www.instagram.com/">
                    <i class="fa-brands fa-instagram"></i>
                </a>
                <a href="https://www.pinterest.com/">
                    <i class="fa-brands fa-pinterest"></i>
                </a>
                <a href="https://www.youtube.com/">
                    <i class="fa-brands fa-youtube"></i>
                </a>
            </div>
        </div>


    </footer>

    <footer id="foot2">
        <div class="footCont">
            <div class="footCont2">
                <div class="column2">
                    <p>Web Application developed by <b>DPMS 2023</b></p>
                    <p>Delig • Pila • Monares • Salas</p>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>
